html
  head
    meta http-equiv="X-FRAME-Options" content="SameOrigin"
    title Node.js Chat Server
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    script
      var socket = io.connect();
      jQuery(function ($) { 
        var users = $('.users');
        var usersList = $('.users ul');
        var messages = $('.messages');
        var audio = $('#audio');
        var nickname = $('#nickname');
        var messageForm = $('.message-box form');
        var message = $('.message');
        var wrapper = $('.wrapper');
        var login = $('.login');
        var setNicknameForm = $('.login form');
        var showButton = $('.show');
        var iframes = $('#iframes');
        var number;
        var dd;
        var mm;
        var yy;
        var months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
        var letters = ['a', 'b', 'c', 'd', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z'];
        var random;
        var randomLetter;
        var messageSend = {};
        var iframeId = '';

        for (var i = 1; i < 100; i++) {
            setTimeout(function(x) {
              return function() {
                random = Math.floor(Math.random() * (1 - 0 + 1)) + 0;
                if (random===1){
                  random = Math.floor(Math.random() * (1 - 0 + 1)) + 0;
                  if (random===1){
                    randomLetter = Math.floor(Math.random() * (25 - 0 + 25)) + 0;
                    number = letters[randomLetter];
                  }else{
                    number = Math.floor(Math.random() * (9999 - 0 + 1)) + 0;
                  }
                }else{
                  dd = Math.floor(Math.random() * (27 - 1 + 1)) + 1;
                  mm = Math.floor(Math.random() * (11 - 1 + 1)) + 1;
                  yy = Math.floor(Math.random() * (2015 - 1920 + 1)) + 1900;
                  number = months[mm] + ' ' + dd + ' ' + yy;
                }
                console.log(number);
                iframes.attr('src','http://translate.google.com/translate_tts?tl=en&q='+number+"&output=embed");
                iframeId = Date.now();
                iframes.attr('id',iframeId);
                if (number!==1){
                  monthNumber = parseInt(mm)+1;
                  number = monthNumber + '' + dd + '' + yy;
                  console.log(number);
                }
              };
            }(i), 10000*i);
        }


        nickname.focus(function() {
          $(this).val('');
        });

        nickname.val("Your username");

        socket.on('nicknames', function (data) {
          var html = '';
          for (var i = 0; i < data.length; i++) {
            html += '<li><span>' + data[i] + '</span></li>';
          }
          usersList.empty().append(html);
        });

        socket.on('announcement', function (data) {
          messages.append('<p>' + data.message + '</p>');
        });

        socket.on('user message', function (data) {
          messages.append('<p><strong>' + data.nick + '</strong> ' +  data.message + '</p>');
        });

        /*
        * Configurar el nombre de usuario para un usuario
        * Un callback es recibido desde el servidor. Si es true entonces el nombre 
        * ya ha sido tomado. 
        */
        setNicknameForm.submit(function(event) {
          event.preventDefault(); 
          socket.emit('nickname', nickname.val(), function (data) {
            if (data) {
              console.log('Nombre de usuario configurado de modo correcto');
              login.hide();
              wrapper.show();
            } else {
              setNicknameForm.prepend('<p>Nombre de usuario ya tomado. Elige otro.</p>');
            }
          });
        });

        /*
        * Enviar un mensaje al servidor
        */
        messageForm.submit(function(event) {
          event.preventDefault(); 
          messageSend.number = number;
          messageSend.response = message.val();
          console.log(messageSend);
          socket.emit('user message', message.val()+','+number);
          message.val('').focus();
        });

        showButton.hover(
          function () {
            $(this).animate({
                'padding-right': '+=2',
                'margin-left': '-=2'
              }, 150);
            }, 
            function () {
              $(this).animate({
                'padding-right': '-=2',
                'margin-left': '+=2'
            }, 150);
          }
        );


        showButton.toggle(function() {
          $(this)
            .text('>')
            .css('margin-left', '180px')
            .attr('title', 'Hide users');
            users.show();
            messages.css('width', '200px');
        }, function() {
          $(this)
            .text('<')
            .css('margin-left', '331px')
            .attr('title', 'Show users');
            users.hide();
            messages.css('width', '350px');
        });
      });





